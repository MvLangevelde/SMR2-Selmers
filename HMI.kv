#: import NoTransition kivy.uix.screenmanager.NoTransition

WindowManager:
    transition: NoTransition()
    Home:
    Control:
    
<Home>:
    name: "hme"
    
    GridLayout:
        cols: 1
        Label:
            text: "Home"
        Button:
            text: "Go to control screen"
            on_release:
                app.root.current = "ctrl"
        
<Control>:
    name: "ctrl"

    GridLayout:
        cols: 2
        GridLayout:
            cols: 1
            Label:
                text: "Input diameter in mm:"
            TextInput:
                id: diameter
                multiline: False
            GridLayout:
                cols: 2
                Button:
                    text: "Confirm diameter"
                    on_release:
                        root.ConfirmDiameter()
                Button:
                    text: "Start grinding"
                    on_release: 
                        root.Start()
            Button:
                text: "Homescreen"
                on_release:
                    app.root.current = "hme"
        GridLayout:
            cols: 1
            id: log       